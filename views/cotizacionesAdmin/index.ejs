<% layout('layouts/adminPlantilla') %>
<h1 class="d-flex">Panel de Cotizaciones</h1>
<div class="row">
  <div class="col mt-3">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover table-bordered align-middle">
            <thead class="text-center">
              <th>Nombre</th>
              <th>Tel√©fono</th>
              <th>Detalles</th>
              <th>Estado</th>
              <th>Ver</th>
              <th>Editar</th>
              <th>Eliminar</th>
            </thead>
            <tbody>
              <% for( let cotizacion of cotizaciones ) { %>
              <tr>
                <td><%= cotizacion.nombre %></td>
                <td><%= cotizacion.telefono %></td>
                <td><%= cotizacion.detalles %></td>
                <td><%= cotizacion.estado %></td>
                <td class="text-center">
                  <a href="/cotizaciones/<%= cotizacion._id %>/detalle"><i class="bi bi-eye text-primary"></i></a>
                </td>
                <td class="text-center">
                  <a href="/cotizaciones/<%= cotizacion._id %>/editar"><i class="bi bi-pencil text-primary"></i></a>
                </td>
                <td class="text-center">
                  <form action="/cotizaciones/<%= cotizacion._id %>?_method=DELETE" method="post">
                    <button class="btn btn-primary"><i class="bi bi-trash"></i></button>
                  </form>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

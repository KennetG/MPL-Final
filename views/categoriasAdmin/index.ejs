<% layout('layouts/adminPlantilla') %>
<div class="container">
  <div class="row">
    <h1>Panel de Categorías de Proyectos</h1>
    <div class="col-md-6 mb-2 mb-md-0">
      <div class="card">
        <div class="card-body">
          <form action="/categorias" method="POST" novalidate class="validar">
            <div>
              <label for="categoria" class="form-label">Nombre de Nueva Categoría</label>
            </div>
            <div class="row">
              <div class="col-sm-6">
                <input type="text" class="form-control" name="categoria[nombre]" id="categoria" placeholder="Inserte categoría aquí" required />
                <div class="invalid-feedback">Campo obligatorio.</div>
                <div class="valid-feedback">Datos válidos.</div>
              </div>
              <div class="d-grid gap-2 col-sm-6 mx-auto mt-3 mt-sm-0">
                <button class="btn btn-primary">Agregar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead>
                <th>Categoría</th>
                <th>Editar</th>
                <th>Eliminar</th>
              </thead>
              <tbody>
                <% for( let categoria of categorias ) { %>
                <tr>
                  <td><%= categoria.nombre %></td>
                  <td>
                    <a href="/categorias/<%= categoria._id %>/editar"><i class="bi bi-pencil text-primary"></i></a>
                  </td>
                  <td>
                    <form action="/categorias/<%= categoria._id %>?_method=DELETE" method="post">
                      <button class="btn btn-primary"><i class="bi bi-trash"></i></button>
                    </form>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
